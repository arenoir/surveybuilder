<h1>Listing Survey Responses</h1>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'New Survey response', new_survey_response_path, class: "btn btn-primary"%>

    <a class="btn btn-default pull-right" role="button" data-toggle="collapse" href="#filters" aria-expanded="false" aria-controls="collapseExample">
      Filters
    </a>

  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="collapse" id="filters">
      <br>
      <div class="well">
        <%= render 'filter_form' %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-sm-12">

    <table class="table">
      <thead>
        <tr>
          <th>Survey</th>
          <th>Crisis</th>
          <th>Participant Id</th>
          <th>Participant Type</th>
          <th>Date</th>
          <th>Iteration</th>
          <th>Surveyor</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @survey_responses.each do |survey_response| %>
          <tr>
            <td><%= survey_response.survey.name %></td>
            <td><%= survey_response.crisis.name %></td>
            <td><%= survey_response.participant_id %></td>
            <td><%= survey_response.participant_type %></td>
            <td><%= survey_response.date %></td>
            <td><%= survey_response.iteration %></td>
            <td><%= survey_response.user.label %></td>
            <td><%= link_to 'Show', survey_response %></td>
            <td><%= link_to 'Edit', edit_survey_response_path(survey_response) %></td>
            <td><%= link_to 'Destroy', survey_response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="row">
  <div class="col-sm-6">
    <%= link_to 'New Survey response', new_survey_response_path, class: "btn btn-primary"%>
  </div>
</div>

<br>